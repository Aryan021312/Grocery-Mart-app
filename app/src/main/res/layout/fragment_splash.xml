<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgreen"
    tools:context=".SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/tvGroceryMart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintBottom_toTopOf="@id/textViewGrocery"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/grsplash"
        android:contentDescription="Grocery Mart Logo" />

    <TextView
        android:id="@+id/textViewGrocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@id/tvGroceryMart"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:text="Grocery at your Doorstep"
        android:textColor="@color/white"
        android:textSize="19.5sp"
        android:alpha="0"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="618dp" />

    <TextView
        android:id="@+id/textViewInstantly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@id/textViewGrocery"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:letterSpacing="0.1"
        android:text="Instantly!"
        android:textColor="@color/white"
        android:textSize="19.4sp"
        android:textStyle="bold"
        android:alpha="0"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="658dp" />

    <View
        android:id="@+id/lineView"
        android:layout_width="234dp"
        android:layout_height="2.6dp"
        android:layout_constraintTop_toBottomOf="@id/textViewInstantly"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:alpha="0"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="597dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
