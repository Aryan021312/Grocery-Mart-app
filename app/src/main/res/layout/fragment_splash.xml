<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/darkgreen"
    android:layout_height="match_parent"
    tools:context=".SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvGroceryMart"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="Grocery"
                android:textColor="@color/white"
                android:textSize="60.00sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="Mart"
                android:textColor="@color/black"
                android:textSize="60.00sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery at your Doorstep"
            android:textSize="19.50sp"
            android:textColor="@color/white"/>

        <View
            android:layout_width="234.00dp"
            android:layout_height="2.60dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:layout_marginTop="26.00dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instantly !"
            android:letterSpacing="0.1"
            android:textSize="10.40sp"
            android:textColor="@color/white"
            android:layout_marginTop="26.00dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
